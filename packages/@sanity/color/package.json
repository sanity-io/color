{
  "name": "@sanity/color",
  "version": "3.0.6",
  "description": "The Sanity color palette.",
  "keywords": [
    "sanity",
    "color",
    "palette"
  ],
  "homepage": "https://www.sanity.io/",
  "bugs": {
    "url": "https://github.com/sanity-io/color/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanity-io/color.git"
  },
  "license": "MIT",
  "author": "Sanity.io <hello@sanity.io>",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "rimraf dist && run-s generate pkg:build pkg:check",
    "clean": "rimraf dist",
    "commit": "cz",
    "dev": "run-p workshop:dev",
    "format": "prettier --write --cache --ignore-unknown .",
    "generate": "node -r esbuild-register scripts/generate.ts",
    "lint": "eslint . --ext .cjs,.js,.jsx,.mjs,.ts,.tsx --quiet",
    "pkg:build": "pkg build --strict",
    "pkg:check": "pkg --strict",
    "pkg:watch": "pkg watch --strict",
    "prepublishOnly": "pnpm build",
    "release": "semantic-release",
    "test": "run-s ts:check vitest:run",
    "ts:check": "tsc --build",
    "vitest:run": "vitest run",
    "watch": "run-p pkg:watch",
    "workshop:build": "workshop build",
    "workshop:dev": "workshop dev"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "extends": "@sanity/semantic-release-preset"
  },
  "devDependencies": {
    "@sanity/icons": "^2.11.8",
    "@sanity/pkg-utils": "^6.8.6",
    "@sanity/semantic-release-preset": "^4.1.8",
    "@sanity/ui": "^2.8.8",
    "@sanity/ui-workshop": "^2.0.16",
    "@types/node": "^20.12.2",
    "@types/react": "^18.2.79",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "esbuild": "^0.23.0",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.2",
    "npm-run-all2": "^5.0.0",
    "polished": "^4.3.1",
    "prettier": "^3.3.2",
    "prettier-plugin-packagejson": "^2.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-is": "^18.2.0",
    "rimraf": "^5.0.5",
    "semantic-release": "^23.1.1",
    "styled-components": "^6.1.12",
    "typescript": "5.4.5",
    "vitest": "^1.5.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "esm.sh": {
    "bundle": false
  }
}
